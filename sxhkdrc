##------ REINCIAR SXHKD ------------##
super + Escape
	pkill -USR1 -x sxhkd
##------ DISPLAY MANAGER -----------##
super + x
	bspc {quit,wm -r}
##-------- MATAR VENTANA -----------##
super + w
	bspc node -{c,k}
##-- ESTABLECER ESTADO DE VENTANA --##
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}
##------- BANDERA DE NODOS ---------##
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}
##------- NODO SALTO DE RUTA -------##
super + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}
##---- ENFOCAR ESCRITORIOS ---------##
super + bracket{left,right}
	bspc desktop -f {prev,next}.local
#-- ENFOCAR EL ULTIMO ESCRITORIO ---##
super + {grave,Tab}
	bspc {node,desktop} -f last
#-- ENFOCAR EL NODO MAS ANTIGUO ----##
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on
##MOVER PROGRAMA A OTRA VENTANA(1-9)##
super + {_,alt + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'
##---- SELECCIONAR LA DIRECCION ----##
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}
##---- SELECCIONAR LA RELACION -----##
super + ctrl + {1-9}
	bspc node -o 0.{1-9}
##----- CANCELAR LA SELECCION ------##
super + ctrl + space
	bspc node -p cancel
##------ EXPANDIR UNA VENTANA ------##
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}
##-------- CONTRAER VENTANA --------##
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
##----- MOVER VENTANA FLOTANTE ----##
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}
